<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2541"
    tools:context=".LoginScreen">


    <ImageView
        android:id="@+id/trefle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="60dp"
        android:src="@drawable/trefle" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="60dp"
        android:layout_alignLeft="@id/trefle"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/diamond"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/trefle"
        android:layout_margin="60dp"
        android:src="@drawable/diamond" />

    <ImageView
        android:id="@+id/spade"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/heart"
        android:layout_alignLeft="@id/diamond"
        android:layout_margin="60dp"
        android:src="@drawable/spade" />


    <TextView
        android:id="@+id/Poker"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/heart"
        android:layout_alignBottom="@id/spade"

        android:layout_marginLeft="54dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/inter"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:text="Poker"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:text="Poker" />

    <TextView
        android:id="@+id/Tracker"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@id/spade"
        android:layout_alignTop="@id/Poker"

        android:layout_marginLeft="54dp"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/inter"
        android:gravity="center_vertical"
        android:text="Tracker"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:text="Tracker" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tracker"
        android:hint="Email Address"
        android:textColorHint="#80ffffff"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="#303A506B"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="15dp"
        android:textColor="#ffffff"
        ></EditText>

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email"
        android:hint="Password"
        android:textColorHint="#80ffffff"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="#303A506B"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="15dp"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        ></EditText>
    <Button
        android:id="@+id/LogInButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#A31621"
        android:text="Log In"></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LogInButton"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:id="@+id/HaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Don't have an account?"
            android:textColor="#80ffffff"
            android:textColorLink="#A31621"
            android:padding="5dp"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Sign Up"
            android:padding="5dp"
            android:textColor="#A31621"
            android:textSize="18sp"
            android:clickable="true"></TextView>


    </LinearLayout>

</RelativeLayout>
